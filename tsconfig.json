{
  "compileOnSave"  : false,
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "esModuleInterop": true,
    "alwaysStrict"              : true,
    "baseUrl"                   : ".",
    "declaration"               : false,
    "emitDecoratorMetadata"     : true,
    "experimentalDecorators"    : true,
    "lib"                       : [
      "es2016",
      "dom"
    ],
    "moduleResolution"          : "node",
    "noImplicitAny"             : true,
    "sourceMap"                 : true,
    "noEmitOnError"             : true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns"         : true,
    "noImplicitThis"            : true,
    "noUnusedLocals"            : false,
    "outDir"                    : "dist",
    "paths"                     : {
      "*": [
        "node_modules/*"
      ]
    },
    "pretty"                    : true,
    "strictNullChecks"          : true
  },
  "include": [
    "src", "spec"
  ],
  "ts-node": {
    "transpileOnly": true
  }
}
